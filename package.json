{
  "name": "lyreform-api-postgress",
  "version": "1.0.0",
  "repository": "",
  "description": "express js api service using postgressql for persistance",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "migrate": "cross-env NODE_ENV=development sequelize-cli db:migrate",
    "migrate:reset": "sequelize-cli db:migrate:undo:all && npm run migrate",
    "dev:migrate:reset": "cross-env NODE_ENV=development sequelize-cli db:migrate:undo:all && npm run migrate",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "author": "tevon456",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sentry/node": "^6.2.2",
    "@sentry/tracing": "^6.2.2",
    "bcryptjs": "^2.4.3",
    "chai-http": "^4.3.0",
    "chroma-js": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "helmet": "^4.4.1",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "mjml": "^4.9.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.5.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "pm2": "^4.5.5",
    "sequelize": "^6.5.0",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "coveralls": "^3.0.7",
    "faker": "^4.1.0",
    "jest": "^26.0.1",
    "lint-staged": "^10.0.7",
    "mocha": "^8.3.2",
    "node-mocks-http": "^1.8.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.0.5",
    "sequelize-cli": "^6.2.0",
    "supertest": "^4.0.2"
  }
}
